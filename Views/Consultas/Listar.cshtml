@model IEnumerable<Models.ViewModel.ConsultasViewModel>
@{
    ViewData["Title"] = "Lista de Consultas";
}

<h2>@ViewData["Title"]</h2>

@Html.ActionLink("Novo", "Cadastro", "Consultas")

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.codm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.codp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hora)
            </th>  
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.codm)
                </td>
                <td>
                    @Html.DisplayFor(model => item.codp)
                </td>
                <td>
                    @Html.DisplayFor(model => item.data)
                </td>
                <td>
                    @Html.DisplayFor(model => item.hora)
                </td>
                
                <td>
                    @Html.ActionLink("Excluir", "Excluir", "Consultas", new {codm = item.codm, data = item.data, hora = item.hora} )
                </td>
            </tr>
        }
    </tbody>
</table>

