@model IEnumerable<Models.ViewModel.PacientesViewModel>
@{
    ViewData["Title"] = "Lista de Pacientes";
}

<h2>@ViewData["Title"]</h2>

@Html.ActionLink("Novo", "Cadastro", "Pacientes", null, new { @class = "btn btn-primary mb-3" })

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.codp)
            </th>
            <th>
                Imagem
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doenca)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.codp)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.imagem))
                    {
                        <img src="~/imagens/pacientes/@item.imagem" alt="Foto" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" />
                    }
                    else
                    {
                        <span class="text-muted">Sem foto</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(model => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(model => item.idade)
                </td>
                <td>
                    @Html.DisplayFor(model => item.cidade)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(model => item.doenca)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Cadastro", "Pacientes", new {codp = item.codp})
                    |
                    @Html.ActionLink("Excluir", "Excluir", "Pacientes", new {codp = item.codp})
                </td>
            </tr>
        }
    </tbody>
</table>